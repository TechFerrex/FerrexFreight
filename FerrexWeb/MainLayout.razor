<style>
    .sticky-nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
    }

    main {
        margin-top: 150px; 
    }

    @@keyframes pulsate {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.7;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .whatsapp {
        position: fixed;
        width: 60px;
        height: 60px;
        bottom: 80px;
        right: 40px;
        background-color: #25d366;
        color: #FFF;
        border-radius: 50px;
        text-align: center;
        font-size: 30px;
        z-index: 9999;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra para mejor visibilidad */
        animation: pulsate 2s infinite; /* Aplicar la animación de pulsación */
    }

    .whatsapp-icon {
        margin-top: 13px;
        /* Puedes aplicar la animación aquí si prefieres que solo el ícono pulse */
        /* animation: pulsate 2s infinite; */
    }
</style>
