@using Microsoft.AspNetCore.Components
@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@using FerrexWeb.Pages
@using FerrexWeb.Layout

<PageTitle>FerrExpress</PageTitle>
<div class="sticky-nav">
    <NavMenu />
</div>

<div class="page">
    <main>
        <article class="content px-1">
            @Body
        </article>
        <Footer />
    </main>
</div>
<CookieConsent />

<a href="https://wa.me/50432024761?text=Hola%20FerrExpress" class="whatsapp" target="_blank">
    <i class="fab fa-whatsapp"></i>
</a>
<NotificationComponent />
<style>
    .sticky-nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
    }

    main {
        margin-top: 150px; 
    }

    @@keyframes pulsate {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.7;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .whatsapp {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        bottom: 80px;
        right: 40px;
        background-color: #25d366;
        color: #FFF;
        border-radius: 50%;
        font-size: 30px;
        z-index: 9999;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        animation: pulsate 2s infinite;     
        text-decoration: none;
    }

    .whatsapp-icon {
        margin-top: 13px;
    }
</style>
