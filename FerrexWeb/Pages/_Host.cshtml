@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace FerrexWeb.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers    

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="~/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="logotornillo.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=open_in_new" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=delivery_truck_speed" />
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
                font-size: 1.5rem; 
                color: inherit; 
            vertical-align: middle; 
        }
    </style>
    <link rel="preload" as="image" href="/images/banner1.webp" fetchpriority="high">
    <link rel="preload" as="image" href="/images/banner2.webp" fetchpriority="high">
    <link rel="preload" as="image" href="/images/banner3.webp" fetchpriority="high">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Hubo un error, intente de nuevo o reinicie la página.
        </environment>

        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment> 

        <!-- Opcional, si quieres mantener los botones -->
        <a href="" class="reload">Recargar</a>
        <a class="dismiss">✖</a>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="~/js/FileUtil.js"></script>
    <script src="js/site.js"></script>  
    <script src="~/js/carouselHelper.js"></script>
    <script>
        function scrollToSection(id) {
            var element = document.getElementById(id);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        }
    </script>
    <script>
        window.imageExists = function (url) {
            return new Promise(function (resolve) {
                var img = new Image();
                img.onload = function () { resolve(true); };
                img.onerror = function () { resolve(false); };
                img.src = url;
            });
        };
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Selecciona todos los carousels de la página
            var carousels = document.querySelectorAll('.image-carousel');

            carousels.forEach(function (carousel) {
                var slides = carousel.querySelectorAll('img');
                var currentIndex = 0;

                // Muestra la primera imagen
                slides[currentIndex].classList.add('active');

                // Cambia la imagen cada 3 segundos (3000 ms)
                setInterval(function () {
                    // Remueve la clase active de la imagen actual
                    slides[currentIndex].classList.remove('active');

                    // Calcula el índice de la siguiente imagen
                    currentIndex = (currentIndex + 1) % slides.length;

                    // Agrega la clase active a la siguiente imagen
                    slides[currentIndex].classList.add('active');
                }, 3000);
            });
        });
    </script>
    <script>
        window.loadGoogleMapsScript  = window.loadGoogleMapsScript  || function(){ console.warn('stub loadGoogleMapsScript'); };
           window.showMapErrorModal     = window.showMapErrorModal     || function(show, msg){ console.warn('stub showMapErrorModal', show, msg); };
           window.initMap               = window.initMap               || function(){ console.warn('stub initMap'); };
    </script>
    <script src="js/mapsInterop.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPNM-zV0g6n0fZca7P3DNAB24goUwb_ro&libraries=places&callback=initMap"></script>

        

</body>
</html>