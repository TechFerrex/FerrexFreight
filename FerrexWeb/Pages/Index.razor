@page "/"
@using FerrexWeb.Models
@using FerrexWeb.Services
@inject CategoryService CategoryService
@inject ProductService ProductService
@inject ApplicationDbContext DbContext
<!--   <PageTitle>Bienvenido a Ferrexpress</PageTitle>-->
<div class="container mt-5">
    <div class="jumbotron text-center">
        <p class="lead">Ofrecemos los mejores productos para ti. Explora nuestras categorías y encuentra lo que necesitas.</p>
        <hr class="my-4" />
        <p>Busca los productos que necesitas para tu construcción</p>
    </div>
</div>
<div class="banner-container">
    @if (!mostrarBanner)
    {
        <p style="text-align:center; margin-top:2rem;">Cargando banner...</p>
    }
    else
    {
        @if (IsFading && !string.IsNullOrEmpty(PreviousImage))
        {
            <NavLink href="@GetProductLink(PreviousImage)">
                <img src="@PreviousImage" class="banner-image fade-out" alt="Banner Anterior" />
            </NavLink>
        }
        <NavLink href="@GetProductLink(CurrentImage)">
            <img src="@CurrentImage"
            class="banner-image @(IsFading ? "" : "fade-in")"
            alt="Banner Actual"
            width="1920"
            height="400"
            loading="lazy"
            fetchpriority="low"
            decoding="async" />
        </NavLink>
    }
</div>
<div class="container mt-5">
    <h2 class="mt-5">Categorías Destacadas</h2>
    <div class="row">
        @if (categories == null)
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
                <div class="spinner" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else
        {
            @foreach (var category in categories)
            {
                var categoryImages = GetImagesForCategory(category.Id);
                int imageCount = categoryImages.Count;
                int cycleTime = 5;
                int totalDuration = imageCount * cycleTime;

                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <NavLink href="@($"productlist/{category.Id}")"
                    class="text-decoration-none"
                    style="color: black">
                        <div class="card">
                            <div class="card-inner" style="--clr:#ffffff;">
                                <div class="box">
                                    <div class="imgBox">
                                        @for (int i = 0; i < imageCount; i++)
                                        {
                                            <img src="@($"{category.ImageUrl}/{categoryImages[i]}")"
                                                 alt="Imagen de categoría"
                                                 class="carousel-image"
                                                 loading="lazy"
                                                 style="animation-delay: @(i * cycleTime)s;
                                                animation-duration: @(totalDuration)s;" />
                                        }
                                    </div>
                                    <div class="icon">
                                        <a href="productlist/@category.Id" class="iconBox">
                                            <span class="material-symbols-outlined">
                                                open_in_new
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <h3>@category.Name</h3>
                                <p>@category.Description</p>
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        }
    </div>
    <h2 class="mt-5">Productos Destacados</h2>
    <div class="row">
        @if (featuredProducts == null)
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
                <div class="spinner" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else
        {
            @foreach (var product in featuredProducts)
            {
                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <NavLink href="@($"productdetails/{product.IdProducto}")"
                    class="text-decoration-none"
                    style="color: black">
                        <div class="card product-card h-100">
                            <img class="card-img-top"
                                 src="@product.ImageUrl"
                            alt="@product.DescProducto"
                            style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.DescProducto</h5>
                                <p class="card-text">
                                    @product.Precio.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-HN"))
                                </p>
                                <div class="mt-auto">
                                    <a href="productdetails/@product.IdProducto"
                                    class="btn custom-btn">
                                        Ver
                                    </a>
                                </div>
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        }
    </div>
</div>
@code {

    private List<Categories> categories;
    private List<Products> featuredProducts;
    private bool isConnected;
    private List<string> ImagePaths = new List<string>
    {
        "/images/banner1.webp",
        "/images/banner2.webp",
        "/images/banner3.webp"
    };  

    private Dictionary<string, string> ImageProductLinks = new Dictionary<string, string>
    {
        { "/images/banner1.webp", "productdetails/7119" },
        { "/images/banner2.webp", "productdetails/7226" },
        { "/images/banner3.webp", "productdetails/7150" }
    };



    private List<string> GetImagesForCategory(int categoryId)
    {
        return new List<string> { "shutter1.webp"};
    }

    private string GetProductLink(string imagePath)
    {

        if (ImageProductLinks.ContainsKey(imagePath))

        {

            return ImageProductLinks[imagePath];

        }
        return "/";
    }
    private int currentIndex = 0;
    private string CurrentImage => ImagePaths[currentIndex];
    private string PreviousImage;
    private bool IsFading = false;
    private System.Timers.Timer timer;
    private bool mostrarBanner = false;              
    private System.Timers.Timer _delayTimer;         

    protected override async Task OnInitializedAsync()
    {

        isConnected = await DbContext.Database.CanConnectAsync();
        if (isConnected)
        {
            categories = await CategoryService.GetRandomCategoriesAsync(3);
            featuredProducts = await ProductService.GetRandomProductsAsync(3);
        }
        categories = await CategoryService.GetRandomCategoriesAsync(3);
           
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // 1) Timer para rotar las imágenes del banner cada 5s
        timer = new System.Timers.Timer(5000);
        timer.Elapsed += (sender, e) =>
        {
            InvokeAsync(ChangeImage);
        };

        // 2) Timer para retrasar la APARICIÓN del banner (1s por ejemplo)
        _delayTimer = new System.Timers.Timer(1000); 
        _delayTimer.Elapsed += (sender, e) =>
        {
            _delayTimer.Stop();
            InvokeAsync(() =>
            {
                mostrarBanner = true;
                timer.Start();         
                StateHasChanged();
            });
        };
        _delayTimer.Start();
    }

    // Método para cambiar de imagen con fade
    private async void ChangeImage()
    {
        IsFading = true;
        PreviousImage = CurrentImage;
        StateHasChanged();

        await Task.Delay(500);

        currentIndex = (currentIndex + 1) % ImagePaths.Count;
        IsFading = false;
        StateHasChanged();
    }

    // Liberar los timers cuando el componente se destruya
    public void Dispose()
    {
        timer?.Dispose();
        _delayTimer?.Dispose();  
    }
}

