@page "/categories"
@using FerrexWeb.Models
@using FerrexWeb.Services
@inject CategoryService CategoryService
@inject NavigationManager NavigationManager

<h1 class="text-center my-4">Categorías de Productos</h1>

@if (categories == null)
{
    <div class="d-flex justify-content-center align-items-center full-height">
        <div class="spinner-border" role="status" style="color: #F5C144;">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var category in categories)
            {
                <div class="col-6 col-sm-4 col-md-3 mb-4">
                    <NavLink href="@($"/productlist/{category.Id}")" class="text-decoration-none text-black">
                        <div class="card category-card h-100 border-0">
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@category.Name</h5>
                                <p class="card-text">@category.Description</p>
                                <div class="mt-auto">
                                    <a href="@($"/productlist/{category.Id}")" class="btn custom-btn">Ver Más</a>
                                </div>
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        </div>
    </div>
}

@code {
    private List<Categories> categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetAllCategoriesAsync();
    }

    private void NavigateToCategory(int categoryId)
    {
        NavigationManager.NavigateTo($"/productlist/{categoryId}");
    }
}
<style>
    .full-height {
        height: 50vh;
    }

    .category-card {
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .category-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
        margin-bottom: 0.3rem;
    }

    .btn.custom-btn {
        background-color: #F5C144;
        border-color: #F5C144;
        color: #000;
    }

        .btn.custom-btn:hover {
            background-color: #A7A9AC;
            border-color: #A7A9AC;
        }

    /* Ajustes Responsivos */
    @@media (max-width: 576px) {
        .card-title

    {
        font-size: 0.8rem;
    }

    .card-text {
        font-size: 0.7rem;
    }

    .card-img-top {
        height: 80px;
        object-fit: cover;
    }

    .card-body {
        padding: 0.5rem;
    }

    .custom-btn {
        padding: 5px 10px;
        font-size: 0.8rem;
    }

    }

    @@media (min-width: 577px) and (max-width: 768px) {
        .card-title

    {
        font-size: 0.9rem;
    }

    .card-text {
        font-size: 0.8rem;
    }

    .card-img-top {
        height: 100px;
        object-fit: cover;
    }

    .card-body {
        padding: 0.75rem;
    }

    .custom-btn {
        padding: 7px 15px;
        font-size: 0.9rem;
    }

    }
</style>
 